<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hari.realestate.Contactus"
    android:background="#BDBDBD">


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Your name"
        android:id="@+id/name"
        android:layout_above="@+id/phone"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginBottom="39dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Your email"
        android:id="@+id/email"
        tools:layout_editor_absoluteY="61dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="91dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Your phone "
        android:id="@+id/phone"
        tools:layout_editor_absoluteY="61dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Property interested in."
        android:id="@+id/property"
        tools:layout_editor_absoluteY="61dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/phone"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone" />

    <Button
        android:layout_width="250dp"
        android:id="@+id/submitinfo"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="39dp"
        android:background="#212121"
        android:textColor="#fffeff"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/property"
        android:layout_alignLeft="@+id/property"
        android:layout_alignStart="@+id/property" />


</RelativeLayout>
